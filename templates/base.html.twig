<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="icon" type="image/png" href="{{ asset('build/images/EmmausConnect.jpg') }}"/>

        <title>
            {% block title %}EMMAUS CONNECT
            {% endblock %}
        </title>
        {# Run composer require symfony/webpack-encore-bundle to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>


	<body class"min-vh-100 d-flex flex-column">
    	{% if app.user %}
            <a href="{{ path('app_faq') }}" class="btn btn-primary text-white m-2">Foire aux questions</a>&nbsp;
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{ path('app_user_index') }}" class="btn btn-secondary text-white m-2">Gestion des utilisateurs</a>
			{% endif %}
			<a href="{{ path('app_logout') }}" class="btn btn-primary text-white m-2">Se d√©connecter</a>
		{% else %}
            <a href="{{ path('app_login') }}" class="btn btn-primary text-white m-2">Se connecter</a>
        {% endif %}

		{% block nav %}
			{# {% include 'include/_navbar.html.twig' %} #}
		{% endblock %}

		{% block body %}{% endblock %}

		<footer>
			{% include 'include/_footer.html.twig' %}
		</footer>
	</body>
</html>
