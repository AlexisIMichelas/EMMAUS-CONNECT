{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="col-lg-2 offset-lg-5">
		<h2 class="m-5 bg-primary-inverse text-white rounded">Liste des utilisateurs</h>
	</div>
    <div class="m-5 table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="d-flex justify-content-end">
                        <a class="btn btn-primary text-white me-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                        {% include 'user/_delete_form.html.twig' %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun utilisateur trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
