{% extends 'base.html.twig' %}

{% block body %}


	<div class="offset-lg-4">
		<h2 class="title container-fluid bg-secondary text-white border border-tertiaire-inverse mb-4">EVALUATION</h2>
	</div>
	<div class="container">

		<form method="POST" action="{{ path('app_calculatrice') }}">
			<div class="form-group col-lg-3 offset-lg-4">
				<label for="phoneRam">RAM du téléphone:</label>
				<select class="form-control" id="phoneRam" name="phoneRam">
					<option value="1">1 Go</option>
					<option value="2">2 Go</option>
					<option value="3">3 Go</option>
					<option value="4">4 Go</option>
					<option value="6">6 Go</option>
					<option value="8">8 Go</option>
					<option value="12">12 Go</option>
					<option value="16">16 Go et plus</option>
				</select>
			</div>
			<div class="form-group col-lg-3 offset-lg-4 mt-3">
				<label for="phoneStorage">Stockage du téléphone :</label>
				<select class="form-control" id="phoneStorage" name="phoneStorage">
					<option value="16">16 Go</option>
					<option value="32">32 Go</option>
					<option value="64">64 Go</option>
					<option value="128">128 Go</option>
					<option value="256">256 Go</option>
					<option value="512">512 Go</option>
					<option value="1024">1 To et plus</option>
				</select>
			</div>
			<div class="form-group col-lg-3 offset-lg-4 mt-3">
				<label for="phoneAntutu">Score Antutu du téléphone :</label>
				<input type="number" class="form-control" id="phoneAntutu" name="phoneAntutu" min="0">
			</div>
			<div class="form-group col-lg-3 offset-lg-4 mt-3">
				<label for="phoneStatus">État du téléphone :</label>
				<select class="form-control" id="phoneStatus" name="phoneStatus">
					<option value="DEEE">DEEE</option>
					<option value="REPARABLE">Réparable</option>
					<option value="BLOQUE">Bloqué</option>
					<option value="RECONDITIONABLE">Reconditionnable</option>
					<option value="RECONDITIONNE">Reconditionné</option>
					<option value="BON ETAT">Bon état</option>
					<option value="TRES BON ETAT">Très bon état</option>
				</select>
			</div>
			<div class="d-flex offset-lg-4 mt-1">

				<button type="submit" class="btn btn-tertiary text-white mt-4 rounded-4">Calculer
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calculator" viewBox="0 0 16 16">
  <path d="M12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h8zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4z"/>
  <path d="M4 2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-2zm0 4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-4z"/>
</svg>
				</button>


				<button type="button" class="btn btn-primary text-white mt-4 ms-4 rounded-4" data-bs-toggle="modal" data-bs-target="#myModal">Voir
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
</svg>
				</button>

				<div class="modal" id="myModal">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header bg-primary text-white">
								<h3 class="modal-title">Résultat de l'évaluation :</h3>
								<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
							</div>
							<div class="modal-body">
								<form>
									<div class="mb-3">

										{% if finalPrice is defined %}
											<div class="container mt-4">
												<p class="fs-5">Score RAM :
													{{ ramScore }}</p>
												<p class="fs-5">Score mémoire :
													{{ storageScore }}</p>
												<p class="fs-5">Score Antutu :
													{{ antutuScore }}</p>
												<p class="fs-5">Pondération :
													{{ ponderation }}%</p>
												<p class="fw-bold fs-5">Prix final :
													{{ finalPrice }}
													€</p>
											</div>
										{% endif %}

									</div>

								</form>
							</div>

						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


{% endblock %}
