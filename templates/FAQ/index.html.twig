{% extends 'base.html.twig' %}

{% block title %}Foire aux questions{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% set i = 0 %}
        {% for faq in faqs %}
            <div class="accordion accordion-flush" id="faq-accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="rounded bg-primary text-white accordion-button collapsed mt-2 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ i + 1 }}" aria-expanded="false" aria-controls="flush-collapseOne">
                            #{{ i + 1 }} - {{ faq.title }}
                        </button>
                    </h2>
                    <div id="flush-collapse{{ i + 1 }}" class="accordion-collapse collapse" data-bs-parent="#faq-accordion">
                        <div class="accordion-body text-justify">
                            {{ faq.content }}<br>
                            <div class="d-flex justify-content-end">
                                <a href="{{ path('app_faq_edit', {'id': faq.id}) }}" class="mt-3 btn btn-primary text-white">Modifier ou supprimer cette question</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% set i = i + 1 %}
        {% else %}
            La F.A.Q. est vide.
        {% endfor %}

        <br><br>
        <a href="{{ path('app_faq_new') }}" class="mt-5 mb-5 btn btn-primary text-white">Cr√©er une nouvelle question</a>
    </div>
{% endblock %}
