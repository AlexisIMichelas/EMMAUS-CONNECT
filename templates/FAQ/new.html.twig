{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle question{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="bg-primary rounded text-white m-3 mb-5 p-3">Créer une nouvelle question</h1>

        {{ form_start(form) }}
            <div class="form-group mb-2 ms-4 me-4">
                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group ms-4 me-4">
                {{ form_label(form.content, 'Contenu') }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '20'}}) }}
            </div>

            <button type="submit" class="btn btn-primary text-white mt-3 ms-4">Créer</button>
        {{ form_end(form) }}
        <hr>
        <a href="{{ path('app_faq_index') }}" class="btn btn-primary text-white m-3">Retour à la foire aux questions</a>
    </div>
{% endblock %}
